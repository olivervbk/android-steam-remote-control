<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
<ImageView
    android:layout_height="fill_parent"
    android:layout_width="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentTop="true"
    android:adjustViewBounds="true"
    android:scaleType="fitCenter"
    android:id="@+id/gamesList_image" />
<TextView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/gamesList_image"
    android:layout_alignParentTop="true"
    android:id="@+id/gamesList_name" />
<TextView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_toRightOf="@+id/gamesList_image"
    android:layout_below="@+id/gamesList_name"
    android:id="@+id/gamesList_installed" />

<TextView 
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_below="@+id/gamesList_name"
    android:id="@+id/gamesList_lastPlayed" />

</RelativeLayout>