<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="olivervbk.steam.steamremote.GamePadActivity" >

    <Button
        android:id="@+id/gamepad_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="HOME" />
    
    <Button
        android:id="@+id/gamepad_left_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:text="Left Trigger" />

    <Button
        android:id="@+id/gamepad_right_trigger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:text="Right Trigger" />

    <Button
        android:id="@+id/gamepad_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gamepad_home"
        android:layout_toLeftOf="@+id/gamepad_right"
        android:layout_toRightOf="@+id/gamepad_left"
        android:text="Up" />

    <Button
        android:id="@+id/gamepad_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/gamepad_home"
        android:text="Right" />

    <Button
        android:id="@+id/gamepad_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:text="Left" />

    <Button
        android:id="@+id/gamepad_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamepad_home"
        android:layout_toLeftOf="@+id/gamepad_right"
        android:layout_toRightOf="@+id/gamepad_left"
        android:text="Down" />

    <Button
        android:id="@+id/gamepad_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/gamepad_home"
        android:layout_toLeftOf="@+id/gamepad_b"
        android:layout_toRightOf="@+id/gamepad_x"
        android:text="A" />

    <Button
        android:id="@+id/gamepad_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
		android:text="B" />

    <Button
        android:id="@+id/gamepad_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/gamepad_home"
        android:text="X" />
    
    <Button
        android:id="@+id/gamepad_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gamepad_home"
        android:layout_toLeftOf="@+id/gamepad_b"
        android:layout_toRightOf="@+id/gamepad_x"
        android:text="Y" />

</RelativeLayout>
